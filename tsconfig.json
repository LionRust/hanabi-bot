{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "target": "esnext",
    "module": "nodenext",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "strict": false
  },
  "include": ["src/**/*.js", "src/**/*.ts", "test/**/*.js"],
  "exclude": ["node_modules"]
}
